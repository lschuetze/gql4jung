<!-- packages with multiple clusters within the package -->
<query>
    <vertex id="class1"><property key="type" value="class"/></vertex>
    <vertex id="class2"><property key="type" value="class"/></vertex>
    <!-- here we use negations: no such class should exist -->
    <exists_not><vertex id="class3"><property key="type" value="class"/></vertex></exists_not>
    <exists_not><vertex id="class4"><property key="type" value="class"/></vertex></exists_not>
    <condition predicate="equals">
    	<attribute vertex="class1" key="cluster"/> 
    	<attribute vertex="class3" key="cluster"/> 
    </condition>
    <condition predicate="equals">
    	<attribute vertex="class2" key="cluster"/> 
    	<attribute vertex="class4" key="cluster"/> 
    </condition>
    <condition predicate="equals">
    	<attribute vertex="class1" key="package"/> 
    	<attribute vertex="class2" key="package"/> 
    </condition>
    <not>
	    <condition predicate="equals">
	    	<attribute vertex="class1" key="package"/> 
	    	<attribute vertex="class3" key="package"/> 
	    </condition>
    </not>
    <not>
	    <condition predicate="equals">
	    	<attribute vertex="class2" key="package"/> 
	    	<attribute vertex="class4" key="package"/> 
	    </condition>
    </not>
</query>