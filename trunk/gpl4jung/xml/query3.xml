<!-- no class should depend on UI and DB classes (and therefore the respective layers) at the same time -->
<query>
    <vertex id="uiclass">
    	<property key="type" value="class"/>
    	<or>
    		<property key="namespace" value="javax.swing"/>
    		<property key="namespace" value="java.awt"/>
    	</or>
   	</vertex>
    <vertex id="dbclass">
    	<property key="type" value="class"/>    	
    	<or>
    		<property predicate="http://www.w3.org/2005/02/xpath-functions:matches" key="namespace" value="java\.sql(.)*"/>
    		<property predicate="http://www.w3.org/2005/02/xpath-functions:matches" key="namespace" value="org\.hibernate(.)*"/>
    	</or>
   	</vertex>
    <path from="dbclass" to="uiclass"></path>
</query>