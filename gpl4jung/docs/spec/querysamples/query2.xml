<!-- circular dependencies between packages -->
<!-- note that this requires that packages are represented as vertexes, barrio does not yet do this -->
<query>
    <vertex id="class1"><property key="type" value="class"/></vertex>
    <vertex id="class3"><property key="type" value="class"/></vertex>
    <vertex id="package1"><property key="type" value="package"/></vertex>
    <vertex id="class2"><property key="type" value="class"/></vertex>
    <vertex id="package2"><property key="type" value="package"/></vertex>
    <path from="class1" to="class2"/>
    <path from="class2" to="class1"/>
    <!-- vertexType is an attribute here - this makes the approach much simpler-->
    <edge from="package1" to="class1"><property key="type" value="contains"/></edge>
    <edge from="package1" to="class3"><property key="type" value="contains"/></edge>
    <edge from="package2" to="class2"><property key="type" value="contains"/></edge>
</query>