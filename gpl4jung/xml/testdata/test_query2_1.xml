<?xml version="1.0" encoding="utf-8" ?>
<!-- circular dependencies between packages -->
<!--Purpose of this query is to test for cicular dependency b/w packages as well as circular dependency between classes-->
<query>
  <vertex id="class1">
    <property key="type" value="class"/>
  </vertex>
  <vertex id="class3">
    <property key="type" value="class"/>
  </vertex>
  <vertex id="class2">
    <property key="type" value="class"/>
  </vertex>
  <path from="class1" to="class2"/>
  <path from="class2" to="class3"/>
  <!--adding a path from class3 to class1, this introduce circular dependencies among classes-->
  <path from="class3" to="class1"/>
  <!--  todo: URI for equals should be used here -->
  <!--  could also use <and> here -->
  <condition predicate="equals">
    <!--  attributes map to property terms -->
    <attribute vertex="class1" key="package"/>
    <attribute vertex="class3" key="package"/>
  </condition>
  <not>
    <condition predicate="equals">
      <attribute owner="class1" key="package"/>
      <attribute owner="class2" key="package"/>
    </condition>
  </not>
</query>