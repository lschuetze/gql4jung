<!-- circular dependencies between packages -->
<query name="circuler_dependency">
    <vertex id="class1"><property key="type" value="class"/></vertex>
    <vertex id="class3"><property key="type" value="class"/></vertex>
    <vertex id="class2"><property key="type" value="class"/></vertex>
    <vertex id="class4"><property key="type" value="class"/></vertex>
    <edge from="class1" to="class2"/>
    <edge from="class4" to="class3"/>
    <path from="class2" to="class4" minLength="0"/>
    <!--  todo: URI for equals should be used here -->
    <!--  could also use <and> here -->
    <condition predicate="equals">
    	<!--  attributes map to property terms -->
    	<attribute vertex="class1" key="namespace"/> 
    	<attribute vertex="class3" key="namespace"/> 
    </condition>
    <not>
	    <condition predicate="equals">
	    	<attribute owner="class1" key="namespace"/> 
	    	<attribute owner="class2" key="namespace"/> 
	    </condition>
    </not>
    <not>
	    <condition predicate="equals">
	    	<attribute owner="class1" key="namespace"/> 
	    	<attribute owner="class4" key="namespace"/> 
	    </condition>
    </not>
    <groupby>
        <vertex id="class1" property="namespace"/>
    </groupby>
    
</query>